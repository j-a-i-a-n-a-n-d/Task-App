{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
